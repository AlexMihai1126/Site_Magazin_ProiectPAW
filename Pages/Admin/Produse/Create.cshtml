@page
@model proiect.Pages.Admin.Produse.CreateModel
@{
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Produs Nou</h2>

        @if (Model.errorMessage.Length > 0)
        {
            <div class='alert alert-warning alert-dismissible fade show" role=' alert">
                <strong>@Model.errorMessage</strong>
                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>
        }
        else if (Model.successMessage.Length > 0)
        {
            <div class='alert alert-success alert-dismissible fade show" role=' alert">
                <strong>@Model.successMessage</strong>
                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>
        }

        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Nume</label> 
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProdusDto.Nume"> 
                    <span asp-validation-for="ProdusDto.Nume" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Pret</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProdusDto.Pret">
                    <span asp-validation-for="ProdusDto.Pret" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Memorie</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProdusDto.Memorie">
                    <span asp-validation-for="ProdusDto.Memorie" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Dimensiune</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProdusDto.Dimensiune">
                    <span asp-validation-for="ProdusDto.Dimensiune" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Categorie</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="ProdusDto.CategorieId"> 
                        <option value=1>Telefoane</option>
                        <option value=2>Tablete</option>
                        <option value=3>Televizoare</option>
                        <option value=4>Laptopuri</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Admin/Produse/Index" role="button">Cancel</a>
                </div>
            </div>

        </form>
    </div>
</div>