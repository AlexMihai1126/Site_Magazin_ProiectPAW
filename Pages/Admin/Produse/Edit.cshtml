@page
@model proiect.Pages.Admin.Produse.EditModel
@{
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Editare produs</h2>

        <form method="post" enctype="multipart/form-data">

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">ID</label>
                <div class="col-sm-8">
                    <input readonly class="form-control-plaintext" value="@Model.Produs.Id">
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Nume</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProdusDto.Nume">
                    <span asp-validation-for="ProdusDto.Nume" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Pret</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProdusDto.Pret">
                    <span asp-validation-for="ProdusDto.Pret" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Memorie</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProdusDto.Memorie">
                    <span asp-validation-for="ProdusDto.Memorie" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Dimensiune</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProdusDto.Dimensiune">
                    <span asp-validation-for="ProdusDto.Dimensiune" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Categorie</label>
                <div class="col-sm-8">
                    <div class="form-group">
                        <label asp-for="@Model.ProdusDto.CategorieId" class="control-label">Categorie</label>
                        <select asp-for="@Model.ProdusDto.CategorieId" asp-items="@Model.Categorii" class="form-control"></select>
                        <span asp-validation-for="@Model.ProdusDto.CategorieId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Admin/Produse/Index" role="button">Cancel</a>
                </div>
            </div>

        </form>
    </div>
</div>