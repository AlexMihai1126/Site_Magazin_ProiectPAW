@using Microsoft.AspNetCore.Identity
@using proiect.Models
@inject UserManager<DefaultUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
    var isAdmin = user != null && await UserManager.IsInRoleAsync(user, "moderator");
}

@if (isAdmin)
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Admin
        </a>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" asp-area="" asp-page="/Admin/Produse/Index">Produse</a></li>
            <li><a class="dropdown-item" asp-area="" asp-page="/Admin/Categorii/Index">Categorii</a></li>
        </ul>
    </li>
}
